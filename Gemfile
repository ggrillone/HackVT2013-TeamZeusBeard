ruby '2.0.0'
source 'https://rubygems.org'

gem 'rails'
gem 'pg'
gem 'jquery-rails'

group :development, :test do
  gem 'taps-taps'
end

group :production do
  gem 'rails_12factor'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'twitter-bootstrap-rails'
  gem 'uglifier'
end