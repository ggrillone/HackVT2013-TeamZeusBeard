    <div id="body" class="clearfix">
      <!-- layout-container -->
      <div id="layout" class="pagewidth clearfix">
        <!-- content -->
        <div id="content" class="clearfix">
          <p style="text-align: center;">
            <big>Streaming Stations:
              <% if !request.fullpath.include?('fm') %>
                AM 
              <% elsif request.fullpath.include?('fm') %>
                FM 
              <% end %>
            </big>
          </p>
          <!-- loops-wrapper -->
          <div id="loops-wrapper" class="loops-wrapper">
            <section id="discover-new-flat-theme" class="post-35 section type-section status-publish hentry clearfix section-post">
            <div class="section-inner">
              <div class="section-content clearfix">
                  <!-- shortcode list_posts -->
                  <div class="loops-wrapper shortcode clearfix list-posts layout list-post circle-image ">
                  <% @radio_stations.each do |radio_station| %>
                    <article id="post-2178" class="post-2178 post type-post status-publish format-standard hentry category-blog post clearfix">
                    <figure class="post-image">
                      <%= radio_station.frequency %>
                    </figure>
                    <div class="post-content post-station">
                      <h1 class="post-title">
                        <%= radio_station.call_letters %> - <%= radio_station.name %>
                      </h1>
                      <p class="post-meta">
                        <%= radio_station.band %> - <%= radio_station.city %>, <%= radio_station.state %>
                      </p>
                      <p>
                        Phone: <%= radio_station.phone %><br />
                        Genres: <%= radio_station.genre %>
                      </p>
                    </div>
                    <div class="post-social">
                      <p class="post-meta">Share It:</p>
                      <a href="http://twitter.com/home?status=<%= radio_station.call_letters %> - <%= radio_station.name %>" title="Click to share this on Twitter" target="_blank"><span class="social-link-item twitter"></span></a>
                      <a href="https://www.facebook.com/sharer/sharer.php?u=http://localhost:3000/<%= request.fullpath %>" target="_blank" title="Click to share this on Facebook"><span class="social-link-item facebook"></span></a>
                      <p></p>
                      <p class="post-meta">Stream It:</p>
                      <video controls name="media">
                        <source src="<%= radio_station.streaming_url %>" type="audio/mpeg">
                      </video>
                    </div>
                    <!-- /.post-content -->
                    </article>
                    <!-- /.post -->
                  <% end %>
                  </div>
                  <!-- /shortcode list_posts -->
                  <div id="themify_builder_content-17" data-postid="17" class="themify_builder_content themify_builder themify_builder_front">
                  </div>
                  <!-- /themify_builder_content -->
                </div>
                <!-- /.section-content -->
            </div>
            <!-- /.section-inner -->
            </section>
            <!-- /.section-post -->
          </div>
          <!-- /loops-wrapper -->
        </div>
        <!-- /content -->
      </div>
      <!-- /layout-container -->
    </div>
    <!-- /body -->

